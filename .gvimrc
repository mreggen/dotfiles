source ~/.vimrc

" Set colorscheme
"colorscheme evening
"colorscheme xoria256
colorscheme gardener

" Disable the toolbar
set guioptions-=T
set guioptions-=r
set guioptions-=l
set guioptions-=b
set guifont=Droid\ Sans\ Mono\ 13

" Set window size
set lines=50
set columns=120

set cursorline "highlight cursor line
